import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class RunDisplay implements ActionListener
{

	JFrame f = new JFrame();
	JButton button1 = new JButton();
	JLabel label1 = new JLabel();
	JLabel label2 = new JLabel();
	JTextField input1 = new JTextField();
	JComboBox dropdown1 = new JComboBox(Converter.currencies);
	JComboBox dropdown2 = new JComboBox(Converter.currencies);
	Converter converter = new Converter();

	
	RunDisplay()
	{
		startGUI();	
		setButton();
		setWelcome();
		setOutput();
		setInput();
		setDropdown();
	}
	
	public void startGUI()
	{
		f.setTitle("Currency Converter");
		f.setVisible(true);
		f.setSize(500, 500);
		f.setLocationRelativeTo(null);
		f.setResizable(false);
		f.getContentPane().setLayout(null);
		f.getContentPane().setBackground(Color.lightGray);
		f.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
	}
	
	public void setButton()
	{
		button1.setText("Next");
		button1.setBounds(360, 390, 100, 50);
		f.add(button1);
		button1.addActionListener(this);
	}
	
	public void setWelcome()
	{
		label1.setText("Welcome");
		label1.setBounds(230, 50, 300, 30);
		f.add(label1);
	}
	
	public void setOutput()
	{
		label2.setText("These are lots of words");
		label2.setBounds(230, 350, 300, 30);
		f.add(label2);
	}
	
	public void setInput()
	{
		input1.setSize(100, 50);
		f.add(input1);
		
	}
	
	public void setDropdown()
	{
		dropdown1.setSize(100, 25);
		dropdown2.setSize(100, 25);
		dropdown1.setLocation(100, 100);
		dropdown2.setLocation(100, 200);
		f.add(dropdown1);
		f.add(dropdown2);
	}
	
	@Override
	public void actionPerformed(ActionEvent e)
	{
		if (Double.parseDouble(input1.getText()) >= 0)
		{
			dispOutput();	  
		}
		System.out.println("action has been performed");
	}
	
	public void dispOutput()
	{
		double num = converter.convert(Double.parseDouble(input1.getText()), dropdown1.getSelectedIndex(), dropdown2.getSelectedIndex());
		String words = "this is my num " + num + ".";
		label2.setText(words);
		

		
	}
}
