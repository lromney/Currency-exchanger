import java.awt.Color;
import java.awt.Cursor;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextArea;
import javax.swing.JTextField;

public class RunDisplay implements ActionListener
{	
	JFrame f = new JFrame();
	JFrame f2 = new JFrame();
	JButton button1 = new JButton("Convert");
	JButton button2 = new JButton("Guide");
	JLabel label1 = new JLabel("Welcome to Currency Converter 1.0");
	JLabel label2 = new JLabel();
	JLabel label3 = new JLabel("I want to convert...");
	JLabel label4 = new JLabel("Amount:");
	JLabel label5 = new JLabel("Type:");
	JLabel label6 = new JLabel("To...");
	JTextField input1 = new JTextField(" ");
	@SuppressWarnings({ "rawtypes", "unchecked" })
	JComboBox dropdown1 = new JComboBox(Converter.currencies);
	@SuppressWarnings({ "rawtypes", "unchecked" })
	JComboBox dropdown2 = new JComboBox(Converter.currencies);
	Cursor select = new Cursor(Cursor.HAND_CURSOR);
	Converter converter = new Converter();
	JTextArea guide = new JTextArea(""
			+ "USD\t(United States Dollars)\n"
			+ "RUB\t(Russian Rubles)\n"
			+ "GBP\t(British Pounds)\n"
			+ "EUR\t(European Euros)\n"
			+ "JPY\t(Japanese Yen)\n"
			+ "EGP\t(Egyptian Pounds)\n"
			+ "CHF\t(Swiss Francs)\n"
			+ "CAD\t(Canadian Dollars)\n"
			+ "AUD\t(Australian Dollars)\n"
			+ "ZAR\t(South African Rands)\n"
			+ "AED\t(Emirati Dirham)\n"
			+ "AFN\t(Afghan Afghanis)\n"
			+ "D\t(Denarius)\n"
			+ "AUR\t(Aureus)\n"
			+ "IC\t(Imperial Credits)\n");

	
	RunDisplay()
	{
		startGUI();	
		setLocations();
		addComponents();
		configComponents();
		actionEvent();
	}
	
	private void startGUI()
	{
		f.setTitle("Currency Converter");
		f.setVisible(true);
		f.setSize(500, 500);
		f.setLocationRelativeTo(null);
		f.setResizable(false);
		f.getContentPane().setLayout(null);
		f.getContentPane().setBackground(Color.lightGray);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	}
	
	private void setLocations()
	{
		button1.setBounds(250, 390, 85, 40);
		button2.setBounds(150, 390, 85, 40);
		label1.setBounds(150, 30, 300, 30);
		label2.setBounds(175, 300, 300, 30);
      label3.setBounds(200, 80, 300, 30);
      label4.setBounds(75, 125, 300, 30);
      label5.setBounds(240, 125, 300, 30);
      label6.setBounds(225, 170, 300, 30);
		dropdown1.setBounds(275, 130, 100, 25);
		dropdown2.setBounds(190, 220, 100, 25);
		input1.setBounds(125, 130, 100, 25);
	}
	
	private void addComponents()
	{
		f.add(label1);
      f.add(label6);
      f.add(label5);
      f.add(label4);
      f.add(label3);
		f.add(button1);
		f.add(button2);
		f.add(label2);
		f.add(dropdown1);
		f.add(dropdown2);
		f.add(input1);
	}
	
	private void configComponents()
	{	
		button1.setCursor(select);
		button2.setCursor(select);
		dropdown1.setCursor(select);
		dropdown2.setCursor(select);
	}
	
	private void actionEvent()
	{
		button1.addActionListener(this);
		button2.addActionListener(this);
	}
	
	@Override
	public void actionPerformed(ActionEvent e)
	{
		//Logic for convert button
		if(e.getSource()==button1)
		{
			if (Double.parseDouble(input1.getText()) >= 0)
			{
				dispOutput();	  
			}
			System.out.println("button 1");
		}
		
		//Logic for the guide button
		if(e.getSource()==button2)
		{
			System.out.println("button 2");
			runGuide();
		}
	}
	
	
	//Displays the converted currency ammount
	private void dispOutput()
	{
		//Gets the Value for the second currency
		String num = converter.convert(Double.parseDouble(input1.getText()), dropdown1.getSelectedIndex(), dropdown2.getSelectedIndex());
		//Gets the full string to display using the number calculated previously and the data in dropdown2
		String words = "You have " + num + " " + converter.getCurrencies(dropdown2.getSelectedIndex());
		//outputs the full string to label2
		label2.setText(words);		
	}
	
	//Methods that are run when clicking the guide button
	private void runGuide()
	{
		startGuide();	
		setLocationsGuide();
		addComponentsGuide();
		configComponentsGuide();
	}
	
	//Creates second JFrame
	private void startGuide()
	{
		f2.setTitle("Currency Converter");
		f2.setVisible(true);
		f2.setSize(280, 320);
		f2.setLocationRelativeTo(null);
		f2.setResizable(false);
		f2.getContentPane().setLayout(null);
		f2.getContentPane().setBackground(Color.lightGray);
		f2.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
	}
	
	
	//Sets locations of objects within the guide JFrame
	private void setLocationsGuide()
	{
		guide.setBounds(10, 10, 240, 260);
	}
	
	
	//Adds components to the guide JFrame
	private void addComponentsGuide()
	{
		f2.add(guide);
	}
	
	//Configures the components within the guide JFrame
	private void configComponentsGuide()
	{
		guide.setLineWrap(true);
		guide.setEditable(false);
		guide.setBackground(null);
	}
}
