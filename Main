   {
	  //Object Creation
      Scanner sc = new Scanner(System.in);
      Converter converter1 = new Converter();
      
      
      
      //Configuring JFrame
      SwingUtilities.invokeLater(new Runnable() 
      {
    	  public void run()
    	  {
    		  RunDisplay window = new RunDisplay();
    		  
    	  }
      });
		      
      
      /*
      //Welcome Message
      System.out.println("Hello World");
      
      
      
      //Menu for conversion
